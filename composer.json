{
    "name": "bbo/signet-faucet",
    "description": "Signet Faucet",
    "type": "project",
    "license": "MIT",
    "require": {
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-redis": "*",
        "gregwar/captcha": "^1.3",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "slim/slim": "^4.15",
        "slim/twig-view": "^3.4",
        "uma/dic": "^4.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "phpunit/phpunit": "^12.5",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "BBO\\Faucet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BBO\\Faucet\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "lint": "@php vendor/bin/php-cs-fixer fix -v",
        "mine": "docker compose exec node bitcoin-cli -generate 1",
        "newaddress": "docker compose exec node bitcoin-cli getnewaddress",
        "setup": [
            "docker compose exec node bitcoin-cli -named createwallet wallet_name=faucet load_on_startup=true",
            "docker compose exec node bitcoin-cli -generate 101 > /dev/null"
        ],
        "test": "docker compose exec -u $(id -u):$(id -g) php-fpm php vendor/bin/phpunit"
    }
}
